<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>File server</title>

    <!-- Core CSS -->
    <link href="/style.css" rel="stylesheet">
  </head>

  <body>
    <div class="container">
      <div class="header clearfix">
        <h3 class="text-muted">File Server</h3>
      </div>
      <nav class="breadcrumb">
          <% breadcrumbs.forEach(function (breadcrumb, i) { %>
            <% if (breadcrumbs.length - 1 == i) { %>
              <span class="breadcrumb-item active"><%= breadcrumb.title %></span>
            <% } else { %>
              <a class="breadcrumb-item" href="<%= breadcrumb.url %>"><%= breadcrumb.title %></a>
            <% } %>
          <% }) %> 
      </nav>

      <!-- Upload file -->
      <div class="jumbotron text-left">
        <h1 class="display-5">Upload file</h1>
        <form method="post" enctype="multipart/form-data">
          <div class="form-group row">
            <div class="col-sm-10">
                <input class="form-control form-control-sm" type="file" name="file" placeholder=".form-control-sm">
            </div>
            <input type="submit" class="btn btn-primary btn-sm" value="Upload"/>
          </div>
        </form>
      </div>

      <%- include('files'); %>        

      <!-- <footer class="footer">
        <p>&copy; Company 2017</p>
      </footer> -->

    </div> <!-- /container -->
  </body>
</html>
